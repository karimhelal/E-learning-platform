@model IEnumerable<CourseBrowseCardViewModel>

@foreach (var courseCard in Model)
{
    <div class="catalog-course-card">
        <div class="course-thumbnail">
            <div class="course-thumbnail-placeholder">
                <img src="@courseCard.ThumbnailImageUrl" alt="@courseCard.Title" />
            </div>
            <div class="course-overlay">
                <a href="/course/@courseCard.CourseId" class="btn btn-primary btn-small view-details-overlay">
                    <span>View Details</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <span class="course-level-badge @courseCard.Level.ToLower()">@courseCard.Level</span>
            <span class="course-tag bestseller">BESTSELLER</span>
        </div>
        
        <div class="course-card-content">
            <div class="course-header">
                <span class="course-category">
                    <i class="fas fa-folder"></i>
                    @courseCard.MainCategory
                </span>
            </div>
            
            <h3 class="course-card-title">@courseCard.Title</h3>
            
            <p class="course-card-description">@courseCard.Description</p>
            
            <div class="course-instructor">
                <div class="avatar avatar-sm">
                    @{
                        var firstChar = courseCard.InstructorName[0];
                        var secondChar = courseCard.InstructorName.Skip(1).FirstOrDefault(c => char.IsUpper(c));
                        var initials = secondChar != '\0' ? $"{firstChar}{secondChar}" : $"{firstChar}{courseCard.InstructorName[1]}";
                    }
                    @initials
                </div>
                <span class="instructor-name">@courseCard.InstructorName</span>
            </div>
            
            <div class="course-stats-row">
                <div class="course-stat">
                    <i class="fas fa-star"></i>
                    <span>@courseCard.AverageRating.ToString("0.0") (@courseCard.NumberOfReviews.ToString("N0"))</span>
                </div>
                <div class="course-stat">
                    <i class="fas fa-users"></i>
                    <span>@courseCard.NumberOfStudents students</span>
                </div>
                <div class="course-stat">
                    <i class="fas fa-clock"></i>
                    <span>@courseCard.NumberOfHours<span>h</span></span>
                </div>
            </div>
            
            <div class="course-card-footer">
                <a href="/course/@courseCard.CourseId" class="btn btn-outline view-details-btn">
                    <i class="fas fa-info-circle"></i>
                    <span>View Details</span>
                </a>
                <button class="btn btn-gradient enroll-btn">
                    <i class="fas fa-plus"></i>
                    <span>Enroll Now</span>
                </button>
            </div>
        </div>
    </div>
}
