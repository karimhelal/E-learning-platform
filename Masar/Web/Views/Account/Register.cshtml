@using Web.ViewModels.Account
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Masar</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/masar-core.css" />
    <link rel="stylesheet" href="~/css/pages/auth.css">

    <style>
        .validation-error,
        .field-validation-error {
            color: #e74c3c;
            font-size: 0.85rem;
            margin-top: 6px;
            display: block;
            font-weight: 500;
            letter-spacing: 0.2px;
            animation: fadeIn 0.2s ease-in-out;
        }

        .field-validation-valid,
        .validation-valid {
            display: none;
        }

    </style>
</head>
<body>
    <div class="grid-background"></div>

    <div class="auth-container">

        <!-- Left Branding -->
        <div class="auth-branding">
            <div class="branding-content">
                <a href="/" class="logo-large">
                    <div class="logo-icon-large"></div>
                    <span class="logo-text-large">Masar</span>
                </a>
                <h1 class="branding-title">Start Your Learning Journey Today</h1>
                <p class="branding-subtitle">
                    Join our community and master the skills you need to build your dream career in tech.
                </p>
            </div>
        </div>

        <!-- Right Register Form -->
        <div class="auth-form-section">
            <div class="auth-form-container">

                <!-- Header -->
                <div class="form-header">
                    <h2 class="form-title">Create Your Account 🚀</h2>
                    <p class="form-subtitle">Start learning with world-class courses</p>
                </div>

                <!-- REGISTER FORM -->
                <form asp-controller="Account" asp-action="Register" method="post" class="auth-form">

                    <!-- First & Last Name -->
                    <div class="form-row-2">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">
                                <i class="fas fa-user"></i> First Name
                            </label>
                            <input asp-for="FirstName"
                                   class="form-input"
                                   placeholder="Ahmed"
                                   autocomplete="given-name" />
                            <span asp-validation-for="FirstName" class="validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">
                                <i class="fas fa-user"></i> Last Name
                            </label>
                            <input asp-for="LastName"
                                   class="form-input"
                                   placeholder="Bakr"
                                   autocomplete="family-name" />
                            <span asp-validation-for="LastName" class="validation-error"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email"
                               type="email"
                               class="form-input"
                               placeholder="your.email@example.com"
                               autocomplete="email" />
                        <span asp-validation-for="Email" class="validation-error"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock"></i> Password
                        </label>

                        <div class="password-input-wrapper">
                            <input asp-for="Password"
                                   type="password"
                                   id="registerpassword"
                                   class="form-input"
                                   placeholder="Create a strong password"
                                   autocomplete="new-password" />

                            <button type="button" class="toggle-password">
                                <i class="fas fa-eye"></i>
                            </button>
                            <span asp-validation-for="Password" class="validation-error"></span>
                        </div>

                        <!-- Strength Indicator -->
                        <div class="password-strength" id="passwordStrength">
                            <div class="strength-bars">
                                <div class="strength-bar"></div>
                                <div class="strength-bar"></div>
                                <div class="strength-bar"></div>
                                <div class="strength-bar"></div>
                            </div>
                            <span class="strength-text">Password strength</span>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-lock"></i> Confirm Password
                        </label>

                        <div class="password-input-wrapper">
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   id="confirmpassword"
                                   class="form-input"
                                   placeholder="Re-enter your password"
                                   autocomplete="new-password" />

                            <button type="button" class="toggle-password">
                                <i class="fas fa-eye"></i>
                            </button>
                            <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                        </div>
                    </div>

                    <div class="form-options">
                        <label class="checkbox-label">
                            <input asp-for="RememberMe" type="checkbox" name="remember" id="remember">
                            <span class="checkbox-custom"></span>
                            <span class="checkbox-text">Remember me</span>
                        </label>
                    </div>
                    <!-- Terms -->
                    @* <div class="form-options">
                        <label class="checkbox-label">
                            <input asp-for="IsTermsAccepted" type="checkbox" required>
                            <span class="checkbox-custom"></span>
                            <span class="checkbox-text">
                                I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                            </span>
                        </label>
                        <span asp-validation-for="IsTermsAccepted" class="validation-error"></span>
                    </div> *@

                    <button type="submit" class="btn btn-primary btn-block btn-large">
                        <span>Create Account</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>

                <div class="form-footer">
                    <p>
                        Already have an account?
                        <a asp-controller="Account" asp-action="Login" class="link-primary">Login</a>
                    </p>
                </div>

            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/auth.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var message = '@ViewBag.AlertMessage';
            var type = '@ViewBag.AlertType';

            if (message && message.length > 0) {
                Swal.fire({
                    title: 'Warning!',
                    text: message,
                    icon: type || 'error',
                    confirmButtonText: 'Log In',
                    showCancelButton: true,
                    cancelButtonText: 'Try With Another Email'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Account/Login';
                    }
                });
            }
        });
    </script>
</body>
</html>
