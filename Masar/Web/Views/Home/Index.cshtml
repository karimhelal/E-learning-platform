@model HomeIndexViewModel

@{
    ViewBag.Title = "Masar | Every Code is a Step Forward";
}

@section Scripts{
    <script src="~/js/Home/home.js"></script>
}

@section Styles{
    <link rel="stylesheet" href="~/css/pages/Home/index.css" />
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-container">
        <div class="hero-content">
            <h1>
                Every <span class="code-accent">&lt;Code/&gt;</span><br />
                is a Step Forward
            </h1>
            <p class="hero-description">
                Master programming through structured learning paths.
                Build real projects, earn certificates, and accelerate
                your tech career with industry-focused courses.
            </p>
            <a asp-controller="Account" asp-action="Login" class="cta-button">
                <span>Start Your Journey Now</span>
                <i class="fas fa-rocket"></i>
            </a>
            <!-- Update hero-stats section -->
            <div class="hero-stats">
                <div class="stat-item">
                    <span class="stat-number">@(Model.TotalStudents >= 1000 ? $"{Model.TotalStudents / 1000}K+" : Model.TotalStudents.ToString())</span>
                    <span class="stat-label">Active Students</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@Model.TotalCourses+</span>
                    <span class="stat-label">Courses</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@Model.AverageRating★</span>
                    <span class="stat-label">Rating</span>
                </div>
            </div>
        </div>

        <div class="hero-visual">
            <div class="code-window">
                <div class="window-header">
                    <div class="window-dot dot-red"></div>
                    <div class="window-dot dot-yellow"></div>
                    <div class="window-dot dot-green"></div>
                    <div class="window-title">learning_journey.js</div>
                </div>
                <div class="code-content">
                    <div class="code-line">
                        <div class="line-number">1</div>
                        <div class="line-content">
                            <span class="keyword">const</span>
                            <span class="variable">student</span> = {
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">2</div>
                        <div class="line-content">
                            name: <span class="string">'You'</span>,
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">3</div>
                        <div class="line-content">
                            passion:
                            <span class="string">'Coding'</span>,
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">4</div>
                        <div class="line-content">
                            goal:
                            <span class="string">'Master Tech'</span>
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">5</div>
                        <div class="line-content">};</div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">6</div>
                        <div class="line-content">&nbsp;</div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">7</div>
                        <div class="line-content">
                            <span class="keyword">function</span>
                            <span class="function">startJourney</span>()
                            {
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">8</div>
                        <div class="line-content">
                            <span class="keyword">return</span>
                            <span class="variable">student</span>.<span class="function">learn</span>()
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">9</div>
                        <div class="line-content">
                            .<span class="function">practice</span>()
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">10</div>
                        <div class="line-content">
                            .<span class="function">master</span>()
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">11</div>
                        <div class="line-content">
                            .<span class="function">getCertified</span>();
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">12</div>
                        <div class="line-content">}</div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">13</div>
                        <div class="line-content">&nbsp;</div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">14</div>
                        <div class="line-content">
                            <span class="comment">// Your success starts here</span>
                        </div>
                    </div>
                    <div class="code-line">
                        <div class="line-number">15</div>
                        <div class="line-content">
                            <span class="function">startJourney</span>();<span class="typing-cursor"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Tracks -->
<section id="tracks">
    <div class="section-header fade-in-up">
        <div class="section-badge">
            <i class="fas fa-route"></i>
            <span>Learning Paths</span>
        </div>
        <h2 class="section-title">Featured Tracks</h2>
        <p class="section-description">
            Choose your path and start building real-world projects with
            our structured learning tracks
        </p>
    </div>

    <div class="tracks-grid">
        @foreach (var track in Model.FeaturedTracks)
        {
            <div class="track-card fade-in-up">
                <div class="track-header">
                    <div class="track-icon">
                        <i class="fas @track.IconClass"></i>
                    </div>
                    <h3 class="track-title">@track.Title</h3>
                    <div class="track-subtitle">@track.Subtitle</div>
                </div>
                <div class="track-content">
                    <div class="track-meta">
                        <div class="meta-item">
                            <div class="meta-value">@track.CoursesCount</div>
                            <div class="meta-label">Courses</div>
                        </div>
                        <div class="meta-item">
                            <div class="meta-value">@track.DurationHours h</div>
                            <div class="meta-label">Duration</div>
                        </div>
                        <div class="meta-item">
                            <div class="meta-value">@(track.StudentsCount >= 1000 ? $"{track.StudentsCount / 1000.0:F1}K" : track.StudentsCount.ToString())</div>
                            <div class="meta-label">Students</div>
                        </div>
                    </div>
                    <a href="/track/@track.TrackId" class="track-cta">
                        Explore Track <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>

    @if (!Model.FeaturedTracks.Any())
    {
        <div class="text-center" style="padding: 3rem; color: var(--text-secondary);">
            <i class="fas fa-graduation-cap fa-3x mb-3"></i>
            <p>No tracks available yet. Check back soon!</p>
        </div>
    }
</section>

<!-- How It Works -->
<section id="how-it-works">
    <div class="section-header fade-in-up">
        <div class="section-badge">
            <i class="fas fa-rocket"></i>
            <span>Your Journey</span>
        </div>
        <h2 class="section-title">How It Works</h2>
        <p class="section-description">
            A simple, proven process to transform you from beginner to
            professional developer
        </p>
    </div>

    <div class="process-container">
        <div class="process-step fade-in-up">
            <div class="step-number">1</div>
            <div class="step-icon">
                <i class="fas fa-book-reader"></i>
            </div>
            <h3 class="step-title">Learn</h3>
            <p class="step-description">
                Follow expertly crafted courses with hands-on tutorials,
                video lessons, and interactive coding exercises designed
                by industry professionals.
            </p>
        </div>

        <div class="process-step fade-in-up">
            <div class="step-number">2</div>
            <div class="step-icon">
                <i class="fas fa-code"></i>
            </div>
            <h3 class="step-title">Practice</h3>
            <p class="step-description">
                Build real-world projects and complete practical
                assignments to solidify your skills and create an
                impressive portfolio.
            </p>
        </div>

        <div class="process-step fade-in-up">
            <div class="step-number">3</div>
            <div class="step-icon">
                <i class="fas fa-award"></i>
            </div>
            <h3 class="step-title">Get Certified</h3>
            <p class="step-description">
                Earn industry-recognized certificates and showcase your
                achievements to employers worldwide with verified
                credentials.
            </p>
        </div>
    </div>
</section>

