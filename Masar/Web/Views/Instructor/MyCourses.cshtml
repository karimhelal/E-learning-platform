@model InstructorCoursesViewModel

@{
    ViewBag.Title = Model.PageTitle;
}

<div class="content-wrapper">
    <!-- Page Header -->
    <section class="page-header">
        <div class="page-header-container">
            <div class="page-title-section">
                <h1 class="page-title">@Model.PageTitle</h1>
                <p class="page-subtitle">
                    <i class="fas fa-book"></i>
                    Manage and track all your courses
                </p>
            </div>
            <div class="page-actions">
                <a href="~/instructor/create-course"
                   class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    <span>Create New Course</span>
                </a>
            </div>
        </div>
    </section>

    <!-- Filter & Search Section -->
    <section class="filter-section">
        <div class="filter-container">
            <div class="search-box-large">
                <i class="fas fa-search"></i>
                <input type="text" id="courseSearch" placeholder="Search your courses..." class="search-input-large" />
            </div>

            <div class="filter-controls">
                <select id="statusFilter" class="filter-select">
                    <option value="all" selected>All Status</option>
                    <option value="published">Published</option>
                    <option value="draft">Draft</option>
                    <option value="archived">Archived</option>
                </select>

                <select id="sortFilter" class="filter-select">
                    <option value="title">Course Name</option>
                    <option value="createdDate" selected>Creation Date</option>
                    <option value="students">Popularity</option>
                    <option value="rate">Rate</option>
                </select>

                <select id="sortOrder" class="filter-select">
                    <option value="asc">Ascending</option>
                    <option value="desc" selected>Descending</option>
                </select>

                <div class="view-toggle">
                    <button class="view-btn active" data-view="grid" title="Grid View">
                        <i class="fas fa-th"></i>
                    </button>
                    <button class="view-btn" data-view="list" title="List View">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Courses Grid -->
    <section class="courses-section">
        <div class="courses-grid" id="coursesGrid">
			<partial name="_CoursesGridPartialView" model="Model.Data.Items" />
        </div>

        <!-- Empty State (show when no courses) -->
        <div class="empty-state" style="display: none">
            <div class="empty-state-icon">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <h3 class="empty-state-title">No Courses Yet</h3>
            <p class="empty-state-description">
                Start creating your first course and share your
                knowledge with students
            </p>
            <a href="create-course.html"
               class="btn btn-primary">
                <i class="fas fa-plus"></i>
                <span>Create Your First Course</span>
            </a>
        </div>
        <!-- Pagination Section -->
        <div class="pagination-container">
			<partial name="_PaginationPartialView" model="Model.Data.Settings" />
        </div>
    </section>
</div>



@section Styles {
    <link rel="stylesheet" href="~/css/pages/instructor-courses.css" />
    <link rel="stylesheet" href="~/css/pagination.css" />
}

@section Scripts {
    <script src="~/js/instructor-courses.js" asp-append-version="true"></script>
}
