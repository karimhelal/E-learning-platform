<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />
    <title>@ViewBag.Title</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/masar-core.css" />
    <link rel="stylesheet" href="~/css/components.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Background Grid -->
    <div class="grid-background"></div>

    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <!-- Instructor Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="~/" class="logo">
                    <div class="logo-icon"></div>
                    <span class="logo-text">Masar</span>
                </a>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <h3 class="nav-section-title">Instructor Panel</h3>
                    <ul class="nav-links">
                        <li>
                            <a href="~/instructor/dashboard"
                               class="nav-link active">
                                <i class="fas fa-chart-line"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/instructor/my-courses" class="nav-link">
                                <i class="fas fa-book-open"></i>
                                <span>My Courses</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/instructor/create-course" class="nav-link">
                                <i class="fas fa-plus-circle"></i>
                                <span>Create Course</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="nav-section">
                    <h3 class="nav-section-title">Account</h3>
                    <ul class="nav-links">
                        <li>
                            <a href="~/instructor/profile" class="nav-link">
                                <i class="fas fa-user"></i>
                                <span>Profile</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/instructor/settings" class="nav-link">
                                <i class="fas fa-cog"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/account/logout" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="sidebar-footer">
                <a href="~/instructor/profile" class="user-profile">
                    <div class="avatar avatar-md">SA</div>
                    <div class="user-info">
                        <div class="user-name">Dr. Sarah Ahmed</div>
                        <div class="user-role">Instructor</div>
                    </div>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </aside>

        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>

        <!-- Mobile Toggle -->
        <button class="mobile-toggle" id="mobileToggle" type="button">
            <i class="fas fa-bars"></i>
        </button>
    </div>

    <!-- Scripts -->
    <script src="~/js/masar-core.js"></script>
    <script src="~/js/sidebar.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
