@model IEnumerable<InstructorCourseViewModel>

@* <div class="courses-list"> *@
    @foreach (var course in Model)
    {
        <!-- Course Card -->
        <div class="my-course-card" data-status="@course.Status.ToLower()" data-creation-date="@course.CreatedDate">
            <div class="course-thumbnail">
                <img src = @course.ThumbnailImageUrl
                     alt="Course thumbnail" />
                <div class="thumbnail-overlay">
                    <div class="quick-actions">
                        <button class="quick-action-btn"
                                title="Preview Course">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="quick-action-btn"
                                title="Edit Course">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>
                </div>
                <span class="status-badge @course.Status.ToLower()">
                    <i class="fas fa-check-circle"></i>
                    @course.Status
                </span>
                <div class="course-level-badge @course.Level.ToLower()">
                    @course.Level
                </div>
            </div>

            <div class="course-content">
                <div class="course-header">
                    <div class="course-meta-top">
                        <span class="course-category">
                            <i class="fas fa-laptop-code"></i>
                            @course.MainCategory
                        </span>
                        <div class="course-rating">
                            <i class="fas fa-star"></i>
                            <span class="rating-value">@course.AverageRating</span>
                            <span class="rating-count">(342)</span>
                        </div>
                    </div>
                </div>

                <h3 class="course-title">
                    @course.Title
                </h3>
                <p class="course-description">
                    @course.Description
                </p>

                <div class="course-stats-grid">
                    <div class="stat-item total-students">
                        <div class="stat-icon students">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-info">
                            <div class="stat-value">
                                @course.NumberOfStudents
                            </div>
                            <div class="stat-label">
                                Students
                            </div>
                        </div>
                    </div>
                    <div class="stat-item total-modules">
                        <div class="stat-icon modules">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <div class="stat-info">
                            <div class="stat-value">@course.NumberOfModules</div>
                            <div class="stat-label">
                                Modules
                            </div>
                        </div>
                    </div>
                    <div class="stat-item total-duration">
                        <div class="stat-icon duration">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-info">
                            <div class="stat-value">
                                @if(course.NumberOfHours > 0) {
                                    @course.NumberOfHours<span>h</span> 
                                }
                                @course.NumberOfMinutes<span>m</span>
                            </div>
                            <div class="stat-label">
                                Duration
                            </div>
                        </div>
                    </div>
                </div>

                <div class="course-progress-section">
                    <div class="progress-header">
                        <div class="progress-info">
                            <i class="fas fa-chart-line"></i>
                            <span class="progress-label">Avg. Completion</span>
                        </div>
                        <span class="progress-value">68%</span>
                    </div>
                    <div class="progress-bar-container">
                        <div class="progress-bar"
                             style="width: 68%">
                            <span class="progress-glow"></span>
                        </div>
                    </div>
                </div>

                @* <div class="course-updated">
                    <i class="fas fa-clock"></i>
                    <span>Updated 2 days ago</span>
                </div> *@
            </div>

            <div class="course-footer">
            <a asp-controller="Instructor" asp-action="EditCourse" asp-route-courseId="@course.CourseId"
                   class="btn btn-secondary btn-block">
                    <i class="fas fa-edit"></i>
                    <span>Edit Course</span>
                </a>
                <a href="analytics.html"
                   class="btn btn-primary btn-block">
                    <i class="fas fa-chart-bar"></i>
                    <span>View Analytics</span>
                </a>
            </div>

            <!-- Dropdown Menu -->
            <div class="course-menu-dropdown">
                <button class="menu-trigger"
                        title="More Options">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <div class="dropdown-content">
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-eye"></i>
                        <span>Preview</span>
                    </a>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-copy"></i>
                        <span>Duplicate</span>
                    </a>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-download"></i>
                        <span>Export</span>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="#"
                       class="dropdown-item danger">
                        <i class="fas fa-archive"></i>
                        <span>Archive</span>
                    </a>
                </div>
            </div>
        </div>
    }
