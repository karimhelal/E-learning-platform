@using Web.ViewModels.Admin
@model PendingPageViewModel

@{
    ViewData["Title"] = "Pending Courses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/admin-pending-courses.css" asp-append-version="true" />
}

<section class="page-header">
    <div class="page-header-container">
        <div class="page-title-section">
            <h1 class="page-title">Pending Courses ⏳</h1>
            <p class="page-subtitle">Review and approve courses submitted by instructors</p>
        </div>
        <div class="page-actions">
            <button class="btn btn-secondary" id="refreshBtn" onclick="loadPendingCourses()">
                <i class="fas fa-sync-alt"></i>
                <span>Refresh</span>
            </button>
        </div>
    </div>
</section>

<div class="dashboard-content">

    <section class="filter-section">
        <div class="filter-container">
            <div class="search-box-large">
                <i class="fas fa-search"></i>
                <input type="text" id="courseSearch" placeholder="Search pending courses..." class="search-input-large" onkeyup="filterCourses()">
            </div>

            <div class="filter-controls">
                <select id="categoryFilter" class="filter-select" onchange="filterCourses()"
                        asp-items="Model.Categories">
                    <option value="all" selected>All Categories</option>
                </select>

                <select id="sortFilter" class="filter-select" onchange="sortCourses()">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                </select>
            </div>
        </div>

        <div class="quick-stats-row">
            <div class="quick-stat-card">
                <div class="stat-icon pending">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value" id="stats-pending">0</div>
                    <div class="stat-label">Pending Review</div>
                </div>
            </div>
        </div>
    </section>

    <section class="courses-section">
        <div class="pending-courses-list" id="pendingCoursesList">
            <div class="text-center p-5">
                <i class="fas fa-spinner fa-spin fa-3x text-muted"></i>
                <p class="mt-3 text-muted">Loading courses...</p>
            </div>
        </div>

        <div class="empty-state" id="emptyState" style="display: none;">
            <div class="empty-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3 class="empty-title">All caught up!</h3>
            <p class="empty-description">There are no pending courses to review at the moment</p>
        </div>
    </section>
</div>

<div class="modal" id="rejectionModal" style="display: none;">
    <div class="modal-backdrop" onclick="closeRejectionModal()"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Reject Course</h3>
            <button class="modal-close" onclick="closeRejectionModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <p class="modal-description">Please provide a reason for rejecting this course. This will be sent to the instructor.</p>
            <form id="rejectionForm">
                <input type="hidden" id="rejectCourseId" />

                <div class="form-group">
                    <label for="rejectionReason">Rejection Reason</label>
                    <select id="rejectionReason" class="form-input">
                        <option value="">Select a reason...</option>
                        <option value="Content Quality">Content Quality Issues</option>
                        <option value="Inappropriate Content">Inappropriate Content</option>
                        <option value="Audio/Video Quality">Audio/Video Quality</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="rejectionDetails">Additional Feedback</label>
                    <textarea id="rejectionDetails" class="form-textarea" rows="5" placeholder="Provide specific feedback..." required></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeRejectionModal()">Cancel</button>
            <button class="btn btn-danger" onclick="submitRejection()">
                <i class="fas fa-times"></i>
                <span>Reject Course</span>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/admin-pending-courses.js" asp-append-version="true"></script>
}