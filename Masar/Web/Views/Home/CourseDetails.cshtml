@model CourseDetailsViewModel

@{
    ViewBag.Title = Model.PageTitle;
}

<!-- Course Hero Section -->
<section class="course-hero">
    <div class="course-hero-container">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="~/">Home</a>
            <i class="fas fa-chevron-right"></i>
            <a href="~/browse-courses">Courses</a>
            <i class="fas fa-chevron-right"></i>
            <span>@Model.Course.MainCategory</span>
            <i class="fas fa-chevron-right"></i>
            <span>@Model.Course.Title</span>
        </div>

        <div class="course-header">
            <div class="course-info">
                <div class="course-badge">
                    <i class="fas fa-code"></i>
                    <span>@Model.Course.MainCategory</span>
                </div>

                <h1 class="course-title">@Model.Course.Title</h1>

                <p class="course-description">
                    @Model.Course.Description
                </p>

                <!-- Instructor Info -->
                <div class="instructor-info">
                    <div class="avatar avatar-md instructor-avatar">
                        @Model.Course.InstructorName.Substring(0, 2).ToUpper()
                    </div>
                    <div class="instructor-details">
                        <div class="instructor-label">Instructor</div>
                        <div class="instructor-name">@Model.Course.InstructorName</div>
                    </div>
                </div>

                <!-- Course Meta -->
                <div class="course-meta">
                    <div class="meta-item">
                        <i class="fas fa-star"></i>
                        <span>@Model.Course.AverageRating (@Model.Course.NumberOfReviews reviews)</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-users"></i>
                        <span>@Model.Course.TotalStudents students</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-clock"></i>
                        <span>@Model.Course.FormattedDuration total</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-signal"></i>
                        <span>@Model.Course.Level</span>
                    </div>
                </div>
            </div>

            <!-- Course Stats Card -->
            <div class="course-stats">
                <div class="progress-card">
                    <h3>Course Stats</h3>
                    <div class="stat-item">
                        <i class="fas fa-book"></i>
                        <span>@Model.Course.TotalModules Modules</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-play-circle"></i>
                        <span>@Model.Course.TotalLessons Lessons</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-certificate"></i>
                        <span>Certificate included</span>
                    </div>
                    
                    @if (Model.IsEnrolled)
                    {
                        @if (Model.ProgressPercentage.HasValue && Model.ProgressPercentage > 0)
                        {
                            <div class="progress-info" style="margin: 1rem 0;">
                                <div class="progress-bar" style="background: rgba(124, 58, 237, 0.2); border-radius: 10px; height: 8px; overflow: hidden;">
                                    <div class="progress-fill" style="background: linear-gradient(90deg, #7c3aed, #06b6d4); height: 100%; width: @Model.ProgressPercentage%"></div>
                                </div>
                                <span style="font-size: 0.85rem; color: #94a3b8; margin-top: 0.5rem; display: block;">@Model.ProgressPercentage% Complete</span>
                            </div>
                        }
                        <a href="/student/course/details/@Model.Course.CourseId" class="btn btn-primary btn-block">
                            <i class="fas fa-play"></i>
                            Continue Learning
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-primary btn-block" onclick="enrollCourse(@Model.Course.CourseId)">
                            <i class="fas fa-plus"></i>
                            Enroll Now - Free
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section class="content-section">
    <div class="tabs-container">
        <!-- Tabs Navigation -->
        <div class="tabs-nav">
            <button class="tab-btn active" data-tab="curriculum">
                <i class="fas fa-list"></i>
                Curriculum
            </button>
            <button class="tab-btn" data-tab="overview">
                <i class="fas fa-info-circle"></i>
                Overview
            </button>
            <button class="tab-btn" data-tab="instructor">
                <i class="fas fa-chalkboard-teacher"></i>
                Instructor
            </button>
        </div>

        <!-- Curriculum Tab -->
        <div class="tab-content active" id="curriculum">
            <div class="modules-list">
                @foreach (var module in Model.Course.Modules)
                {
                    <div class="module-item">
                        <div class="module-header">
                            <div class="module-number">@module.Order</div>
                            <div class="module-info">
                                <h3 class="module-title">@module.Title</h3>
                                <div class="module-meta">
                                    <span class="module-meta-item">
                                        <i class="fas fa-play-circle"></i>
                                        @module.Lessons.Count() lessons
                                    </span>
                                    <span class="module-meta-item">
                                        <i class="fas fa-clock"></i>
                                        @module.DurationMinutes min
                                    </span>
                                </div>
                            </div>
                            <div class="module-toggle">
                                <i class="fas fa-chevron-down"></i>
                            </div>
                        </div>

                        <div class="lessons-list">
                            @foreach (var lesson in module.Lessons)
                            {
                                <div class="lesson-item">
                                    <div class="lesson-icon @(lesson.ContentType.ToString().ToLower())">
                                        <i class="fas fa-@(lesson.ContentType == Core.Entities.Enums.LessonContentType.Video ? "play" : "file-alt")"></i>
                                    </div>
                                    <div class="lesson-info">
                                        <div class="lesson-title">@lesson.Title</div>
                                        <div class="lesson-duration">@lesson.FormattedDuration</div>
                                    </div>
                                    @if (!Model.IsEnrolled)
                                    {
                                        <div class="lesson-lock">
                                            <i class="fas fa-lock" title="Enroll to access"></i>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            
            @if (!Model.IsEnrolled)
            {
                <div class="enroll-cta" style="text-align: center; padding: 2rem; margin-top: 2rem; background: rgba(124, 58, 237, 0.05); border-radius: 12px; border: 1px dashed rgba(124, 58, 237, 0.3);">
                    <h3 style="margin-bottom: 0.5rem;">Ready to Start Learning?</h3>
                    <p style="color: #94a3b8; margin-bottom: 1rem;">Enroll now to access all @Model.Course.TotalLessons lessons</p>
                    <button class="btn btn-primary" onclick="enrollCourse(@Model.Course.CourseId)">
                        <i class="fas fa-plus"></i> Enroll Now - Free
                    </button>
                </div>
            }
        </div>

        <!-- Overview Tab -->
        <div class="tab-content" id="overview">
            <div class="overview-grid">
                <div class="overview-content">
                    <div class="overview-section">
                        <h2 class="section-title">What You'll Learn</h2>
                        <ul class="objectives-list">
                            @foreach (var outcome in Model.Course.LearningOutcomes)
                            {
                                <li>
                                    <i class="fas fa-check-circle"></i>
                                    <span>@outcome.Title</span>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="overview-section">
                        <h2 class="section-title">Course Description</h2>
                        <p class="section-text">@Model.Course.Description</p>
                    </div>
                </div>

                <div class="overview-sidebar">
                    <div class="overview-section">
                        <h3 class="section-title">Categories</h3>
                        @foreach (var category in Model.Course.Categories)
                        {
                            <span class="badge">@category</span>
                        }
                    </div>

                    <div class="overview-section">
                        <h3 class="section-title">Languages</h3>
                        @foreach (var language in Model.Course.Languages)
                        {
                            <span class="badge">@language</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Instructor Tab -->
        <div class="tab-content" id="instructor">
            <div class="overview-section">
                <div class="instructor-info" style="margin-bottom: 2rem;">
                    <div class="avatar avatar-lg">
                        @Model.Course.InstructorName.Substring(0, 2).ToUpper()
                    </div>
                    <div class="instructor-details">
                        <h2>@Model.Course.InstructorName</h2>
                        <p>@Model.Course.InstructorYearsOfExperience years of experience</p>
                    </div>
                </div>
                <p class="section-text">@Model.Course.InstructorBio</p>
            </div>
        </div>
    </div>
</section>

<!-- Toast for notifications -->
<div class="toast" id="toast">
    <i class="fas fa-check-circle"></i>
    <span id="toastMessage">Changes saved!</span>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/course-details.css" />
    <style>
        .lesson-lock {
            color: #64748b;
            font-size: 0.85rem;
        }
        .lesson-lock i {
            opacity: 0.5;
        }
        .toast {
            position: fixed;
            bottom: 2rem;
            left: 50%;
            transform: translateX(-50%) translateY(100px);
            padding: 1rem 1.5rem;
            background: #1a1a2e;
            border: 1px solid rgba(124, 58, 237, 0.3);
            border-radius: 12px;
            color: white;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            z-index: 10000;
            opacity: 0;
            transition: all 0.3s ease;
        }
        .toast.show {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }
        .toast.success { border-color: #10b981; }
        .toast.success i { color: #10b981; }
        .toast.error { border-color: #ef4444; }
        .toast.error i { color: #ef4444; }
    </style>
}

@section Scripts {
    <script src="~/js/course-details.js"></script>
}