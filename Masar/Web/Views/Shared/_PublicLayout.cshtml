@{
    var userName = Model?.StudentName ?? Model?.Data?.FullName ?? "Guest";
    var userInitials = Model?.UserInitials ?? "G";
    var userRole = User.IsInRole("Instructor") ? "Instructor" : "Student";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <!-- Core Stylesheets -->
    <link rel="stylesheet" href="~/css/masar-core.css" />
    <link rel="stylesheet" href="~/css/components.css" />
    <link rel="stylesheet" href="~/css/pages/Student/student.css" />

    <!-- Page-specific Styles -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Background Grid -->
    <div class="grid-background"></div>

    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="logo">
                    <div class="logo-icon"></div>
                    <span class="logo-text">Masar</span>
                </a>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <h3 class="nav-section-title">Main Menu</h3>
                    <ul class="nav-links">
                        <li>
                            <a href="~/student/dashboard" class="nav-link">
                                <i class="fas fa-th-large"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/student/my-courses" class="nav-link">
                                <i class="fas fa-book"></i>
                                <span>My Courses</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/student/my-tracks" class="nav-link">
                                <i class="fas fa-route"></i>
                                <span>My Tracks</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/student/certificates" class="nav-link">
                                <i class="fas fa-certificate"></i>
                                <span>Certificates</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="nav-section">
                    <h3 class="nav-section-title">Explore</h3>
                    <ul class="nav-links">
                        <li>
                            <a href="~/student/browse-courses" class="nav-link">
                                <i class="fas fa-compass"></i>
                                <span>Browse Courses</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/student/browse-tracks" class="nav-link">
                                <i class="fas fa-map-marked-alt"></i>
                                <span>Browse Tracks</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="nav-section">
                    <h3 class="nav-section-title">Account</h3>
                    <ul class="nav-links">
                        <li>
                            <a href="~/student/profile" class="nav-link">
                                <i class="fas fa-user"></i>
                                <span>Profile</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="SwitchToInstructor" class="nav-link">
                                <i class="fas fa-exchange-alt"></i>
                                <span>Switch to Instructor</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/account/logout" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="sidebar-footer">
                <a href="~/student/profile" class="user-profile">
                    <div class="avatar avatar-md">@userInitials</div>
                    <div class="user-info">
                        <div class="user-name">@userName</div>
                        <div class="user-role">@userRole</div>
                    </div>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </aside>

        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>

        <!-- Mobile Toggle -->
        <button class="mobile-toggle" id="mobileToggle" type="button">
            <i class="fas fa-bars"></i>
        </button>
    </div>

    <!-- Scripts -->
    <script src="~/js/masar-core.js"></script>
    <script src="~/js/sidebar.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Page-specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>