@{
    ViewData["Title"] = "Create Track";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="content-header">
    <div class="header-left">
        <button class="menu-toggle"><i class="fas fa-bars"></i></button>
        <div class="page-title">
            <h1>Create New Track</h1>
            <p class="page-subtitle">Add a new learning track</p>
        </div>
    </div>
</header>

<section class="users-section">
    <form id="createTrackForm">
        <!-- Title -->
        <div class="form-group">
            <label for="title">Track Title <span class="required">*</span></label>
            <input type="text" id="title" class="form-control"
                   placeholder="e.g., Full Stack Web Developer Track" maxlength="200" required>
        </div>

        <!-- Description -->
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" class="form-control" rows="4"
                      placeholder="Describe what students will learn..." maxlength="2000"></textarea>
        </div>

        <!-- Status -->
        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" class="form-control">
                <option value="0">Draft</option>
                <option value="1">Pending Review</option>
                <option value="2">Published</option>
            </select>
        </div>

        <!-- Courses - Drag and Drop -->
        <div class="form-group">
            <label>Include Courses</label>
            <div class="drag-drop-container">
                <!-- Available Courses -->
                <div class="course-list-panel">
                    <div class="panel-header">
                        <h4><i class="fas fa-list"></i> Available Courses</h4>
                        <input type="text" id="courseSearch" class="search-input"
                               placeholder="Search..." oninput="filterCourses()">
                    </div>
                    <div class="course-list" id="availableCourses">
                        <div class="loading-text">Loading courses...</div>
                    </div>
                </div>

                <!-- Arrow Icon -->
                <div class="drag-arrow">
                    <i class="fas fa-arrows-alt-h"></i>
                </div>

                <!-- Selected Courses -->
                <div class="course-list-panel selected-panel">
                    <div class="panel-header">
                        <h4><i class="fas fa-check-circle"></i> Selected Courses</h4>
                        <span class="selected-count" id="selectedCount">0 selected</span>
                    </div>
                    <div class="course-list" id="selectedCourses">
                        <div class="empty-state">
                            <i class="fas fa-hand-pointer"></i>
                            <p>Drag courses here</p>
                        </div>
                    </div>
                </div>
            </div>
            <small class="form-text">Drag courses from left to right to add them to the track. Drag within the right panel to reorder.</small>
        </div>

        <!-- Buttons -->
        <div class="form-actions">
            <a href="/Admin/Tracks" class="btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn-primary">
                <i class="fas fa-plus"></i> Create Track
            </button>
        </div>
    </form>
</section>

@section Styles {
    <style>
        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                color: var(--text-primary);
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .form-group .required {
                color: #ef4444;
            }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            color: var(--text-primary);
            font-size: 0.95rem;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--accent-purple);
            }

        .form-text {
            color: var(--text-secondary);
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border-color);
        }

        .btn-primary, .btn-secondary {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #7c3aed, #06b6d4);
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(124, 58, 237, 0.4);
            }

        .btn-secondary {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }

        /* Drag and Drop Styles */
        .drag-drop-container {
            display: flex;
            gap: 1rem;
            align-items: stretch;
        }

        .course-list-panel {
            flex: 1;
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 10px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .selected-panel {
            border-color: rgba(124, 58, 237, 0.3);
        }

        .panel-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1rem;
            background: rgba(124, 58, 237, 0.1);
            border-bottom: 1px solid var(--border-color);
        }

            .panel-header h4 {
                margin: 0;
                font-size: 0.9rem;
                color: var(--text-primary);
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                .panel-header h4 i {
                    color: #7c3aed;
                }

        .search-input {
            padding: 0.4rem 0.6rem;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            color: var(--text-primary);
            font-size: 0.85rem;
            width: 120px;
        }

            .search-input:focus {
                outline: none;
                border-color: var(--accent-purple);
            }

        .selected-count {
            font-size: 0.85rem;
            color: #06b6d4;
            font-weight: 600;
        }

        .course-list {
            flex: 1;
            min-height: 250px;
            max-height: 300px;
            overflow-y: auto;
            padding: 0.5rem;
        }

        .course-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            margin-bottom: 0.5rem;
            cursor: grab;
            transition: all 0.2s ease;
        }

            .course-item:hover {
                border-color: #7c3aed;
                background: rgba(124, 58, 237, 0.05);
            }

            .course-item.dragging {
                opacity: 0.5;
                border-color: #7c3aed;
                cursor: grabbing;
            }

            .course-item .drag-handle {
                color: var(--text-secondary);
                font-size: 0.9rem;
            }

            .course-item .course-title {
                flex: 1;
                color: var(--text-primary);
                font-size: 0.9rem;
            }

            .course-item .course-order {
                background: rgba(124, 58, 237, 0.2);
                color: #a78bfa;
                padding: 0.2rem 0.5rem;
                border-radius: 4px;
                font-size: 0.75rem;
                font-weight: 600;
            }

            .course-item .remove-btn {
                background: none;
                border: none;
                color: #ef4444;
                cursor: pointer;
                padding: 0.25rem;
                opacity: 0.7;
                transition: opacity 0.2s;
            }

                .course-item .remove-btn:hover {
                    opacity: 1;
                }

        .drag-arrow {
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
            font-size: 1.5rem;
            padding: 0 0.5rem;
        }

        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            color: var(--text-secondary);
            padding: 2rem;
        }

            .empty-state i {
                font-size: 2rem;
                margin-bottom: 0.5rem;
                opacity: 0.5;
            }

            .empty-state p {
                margin: 0;
                font-size: 0.9rem;
            }

        .loading-text {
            padding: 2rem;
            text-align: center;
            color: var(--text-secondary);
        }

        /* Drag over effect */
        .course-list.drag-over {
            background: rgba(124, 58, 237, 0.05);
            border: 2px dashed #7c3aed;
            border-radius: 8px;
        }

        /* Scrollbar */
        .course-list::-webkit-scrollbar {
            width: 6px;
        }

        .course-list::-webkit-scrollbar-track {
            background: var(--secondary-bg);
        }

        .course-list::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 3px;
        }

        @@media (max-width: 768px) {
            .drag-drop-container {
                flex-direction: column;
            }

            .drag-arrow {
                transform: rotate(90deg);
                padding: 0.5rem 0;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/create-track.js"></script>
}